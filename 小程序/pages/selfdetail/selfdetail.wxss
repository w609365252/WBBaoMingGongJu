input {
    box-sizing: border-box;
}

.enroll-info {
    padding-top: 20rpx;
}

.enroll-info .label {
    font-size: 30rpx;
    color: #333;
    padding: 0 30rpx 12rpx;
}

.desc {
    font-size: 26rpx;
    color: #999;
    padding: 0 30rpx 12rpx;
    margin-top: -10rpx;
}

.label label {
    color: #ff6d6d;
    padding-left: 10rpx;
}

.form-control {
    display: block;
    overflow: hidden;
    background: #fff;
    font-size: 30rpx;
    padding: 20rpx 30rpx;
    line-height: 1.5;
    min-height: 84rpx;
    white-space: normal;
    word-break: break-all;
    box-sizing: border-box;
}

.image-control {
    padding-bottom: 5rpx;
}

.space {
    height: 10rpx;
}

.radio-group {
    background: #fff;
}

.radio {
    display: block;
    border-bottom: 1rpx solid #f5f5f5;
    padding: 15rpx 30rpx;
    font-size: 30rpx;
    line-height: 2;
}

.enroll-tips {
    font-size: 24rpx;
    color: #999;
    padding: 30rpx;
    white-space: nowrap;
}

.enroll-tips image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
    vertical-align: top;
}

.btn-exit {
    margin-top: 30rpx;
    background: #fff;
    color: #000;
    border: 1rpx solid #ddd;
}

.big-img {
    float: left;
    margin: 0 20rpx 20rpx 0;
    border: 1rpx solid #dbdcdd;
    width: 150rpx;
    height: 150rpx;
}

.btn-warning {
    margin-top: 20rpx;
    color: #333;
}

.btn-white {
    background: #fff;
    border: 1rpx solid #ccc;
    color: #333;
}

.mb20 {
    margin-bottom: 20rpx;
}

.blue {
    color: #00a8f3;
}

.text-red {
    color: #ff6d6d;
}

.goods-label {
    font-size: 30rpx;
    color: #333;
    padding: 20rpx 30rpx 12rpx;
}

.goods-box {
    background: #fff;
    padding: 20rpx 30rpx;
}

.good-item {
    position: relative;
    border: 1rpx solid #ccc;
    height: 200rpx;
    overflow: hidden;
    display: flex;
    margin-bottom: 20rpx;
}

.good-pic {
    display: block;
    width: 200rpx;
    height: 200rpx;
}

.good-body {
    flex: 1;
    padding: 20rpx 20rpx;
}

.good-title {
    font-size: 30rpx;
    line-height: 1.3;
    color: #333;
    font-weight: 900;
    white-space: normal;
    word-break: break-all;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.good-desc {
    font-size: 24rpx;
    color: #999;
    line-height: 1.8;
    max-width: 440rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.good-bottom {
    position: absolute;
    right: 20rpx;
    bottom: 16rpx;
    width: 450rpx;
    display: flex;
    align-items: center;
}

.good-price {
    font-size: 30rpx;
    color: #f00;
    margin-right: 10rpx;
}

.good-remain {
    font-size: 24rpx;
    color: #999;
}

.count-box {
    position: absolute;
    right: 0;
    bottom: -10rpx;
    display: flex;
    align-items: center;
}

.count-box image {
    width: 30rpx;
    height: 30rpx;
    padding: 15rpx 10rpx;
}

.count-box view {
    font-size: 30rpx;
    color: #333;
    width: 60rpx;
    text-align: center;
}

.count-buy {
    position: absolute;
    right: 20rpx;
    bottom: 0;
    color: #666;
    font-size: 24rpx;
}

.total {
    text-align: right;
    font-size: 30rpx;
    color: 999;
}

.total label {
    color: #f00;
}

.pic-count {
    position: absolute;
    left: 0;
    top: 0;
    z-index: 8;
    background: rgba(0,0,0,0.4);
    color: #fff;
    font-size: 24rpx;
    padding: 0 10rpx;
    height: 36rpx;
    line-height: 36rpx;
}

.dialog-rich-text {
    display: flex;
    align-items: center;
    padding: 30rpx 0 15rpx;
}

.text-phone label {
    color: #5b6b95;
    text-decoration: underline;
}