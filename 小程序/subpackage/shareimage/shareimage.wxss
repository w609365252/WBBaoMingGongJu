page {
}

.bd {
    padding: 30rpx 30rpx 128rpx;
    background: #494d53;
}

image {
    vertical-align: top;
}

.wrapper {
    background: #fff;
}

.opacity {
    opacity: 0;
}

.header {
    display: flex;
    align-items: center;
    padding: 40rpx 30rpx;
}

.avatar {
    width: 80rpx;
    height: 80rpx;
    margin-right: 20rpx;
    border: 1rpx solid #ccc;
    border-radius: 50%;
}

.h-body {
    flex: 1;
    overflow: hidden;
}

.h-name {
    font-size: 30rpx;
    color: #00a8f3;
    font-weight: 900;
    max-width: 530rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.h-desc {
    font-size: 28rpx;
    color: #333;
    padding-top: 5rpx;
}

.share-body {
    position: relative;
    padding: 0 30rpx;
}

.banner {
    width: 630rpx;
    height: 356rpx;
}

.share-title {
    font-size: 36rpx;
    font-weight: 900;
    line-height: 1.6;
    color: #333;
    margin-top: 25rpx;
    padding: 5rpx;
    border: 1rpx dotted #ddd;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.edit-banner {
    position: absolute;
    top: 10rpx;
    right: 40rpx;
    padding: 8rpx 30rpx;
    background: #eee;
    color: #333;
    font-size: 26rpx;
}

.edit-box {
    position: absolute;
    left: 30rpx;
    top: 330rpx;
}

.eidt-text {
    padding: 8rpx 30rpx;
    background: #eee;
    color: #333;
    font-size: 26rpx;
}

.share-item {
    display: flex;
    align-items: center;
    margin-top: 25rpx;
}

.share-item image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 12rpx;
}

.share-item label {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 28rpx;
    color: #333;
}

.qrcode {
    display: block;
    width: 240rpx;
    height: 240rpx;
    margin: 40rpx auto 0;
}

.qrcode-desc {
    font-size: 26rpx;
    color: #666;
    text-align: center;
    padding: 20rpx 0 30rpx;
}

.footer {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 100;
    display: flex;
    align-items: center;
    background: #fff;
    height: 98rpx;
    border-top: 1rpx solid #ddd;
}

.btn-share {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
    color: #333;
}

.btn-share cover-image {
    width: 48rpx;
    height: 48rpx;
    margin-right: 12rpx;
}

.canvas {
    position: absolute;
    left: 30rpx;
    top: 30rpx;
    width: 690rpx;
    height: 680px;
    background: #fff;
    margin-bottom: 98rpx;
}

.canvas-show {
    display: block;
}

.canvas-hide {
    display: none;
}

.canvas-text {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 98rpx;
    height: 60rpx;
    line-height: 60rpx;
    background: rgba(0,0,0,.6);
    color: #fff;
    font-size: 28rpx;
    text-align: center;
}

.code-dialog-body {
    width: 580rpx;
}

.code-header {
    height: 100rpx;
    line-height: 100rpx;
    font-size: 32rpx;
    text-align: center;
    color: #fff;
    background: #12b7f5;
    border-radius: 10rpx 10rpx 0 0;
}

.code-body {
    display: flex;
    align-items: center;
    justify-content: left;
    padding: 10rpx 40rpx;
}

.code-body view {
    height: 100rpx;
    line-height: 100rpx;
    font-size: 30rpx;
    color: #333;
}

.code-body label {
    flex: 1;
    font-size: 30rpx;
    color: #333;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.code-img {
    width: 150rpx;
    height: 100rpx;
}

.input-verify-code {
    display: block;
    margin: 0 auto;
    padding: 10rpx 20rpx;
    box-sizing: border-box;
    width: 500rpx;
    border: 1rpx solid #ddd;
    height: 88rpx;
    color: #333;
    font-size: 28rpx;
}

.code-footer {
    display: flex;
    padding: 0 40rpx 40rpx;
    justify-content: space-between;
}

.code-footer button {
    width: 235rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 10rpx;
    font-size: 30rpx;
}

.btn-blue {
    background: #12b7f5;
    color: #fff;
    text-align: center;
}

.btn-white {
    background: #f8f8f8;
    color: #666;
    border: 1rpx solid #eee;
    text-align: center;
}

.show {
    visibility: visible;
}

.hide {
    visibility: hidden;
}

.space {
    height: 30rpx;
}

.code-dialog,.code-dialog .mask {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    z-index: 1000;
}

.code-dialog .mask {
    background: rgba(0,0,0,.4);
}

.code-dialog .dialog-body {
    position: fixed;
    left: 50%;
    top: 40%;
    transform: translate(-50%,-50%);
    background: #fff;
    border-radius: 10rpx;
    z-index: 1001;
}

.code-dialog .dialog-close {
    position: absolute;
    right: 0;
    top: 0;
}

.confirm-dialog {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    z-index: 100;
    background: rgba(0,0,0,0.3);
}

.confirm-body {
    position: fixed;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    background: #fff;
    width: 550rpx;
    border-radius: 20rpx;
    padding: 40rpx;
}

.confirm-title {
    position: relative;
    font-size: 36rpx;
    overflow: hidden;
    text-align: center;
    color: #333;
    height: 36rpx;
    line-height: 36rpx;
    padding-top: 5rpx;
}

.confirm-content {
    font-size: 30rpx;
    color: #333;
    padding-top: 39rpx;
    line-height: 1.6;
}

.confirm-content view:nth-child(2) {
    color: #999;
    font-size: 28rpx;
}

.confirm-content view label {
    color: #fe523c;
    font-weight: 600;
}

.confirm-my-coin {
    font-size: 30rpx;
    color: #fe523c;
    text-align: center;
    padding: 30rpx 0;
}

.confirm-btn {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.confirm-btn-ok,.confirm-btn-no {
    width: 260rpx;
    background-color: #12b7f5;
    color: #fff;
    height: 88rpx;
    border-radius: 10rpx;
    text-align: center;
    line-height: 88rpx;
    font-size: 30rpx;
}

.confirm-btn-no {
    background-color: #f8f8f8;
    color: #666;
    border: 3rpx solid #ccc;
    height: 82rpx;
    line-height: 82rpx;
}